#: import RiseInTransition __main__.RiseInTransition

Interface_3:
    orientation: "vertical"
    MDTopAppBar:
        title: "Curl App"
        elevation: 0
        md_bg_color: app.theme_cls.accent_color
        specific_text_color: app.theme_cls.primary_color
        left_action_items: [["arrow-left", lambda x: root.back(), "Go Back"]]
        right_action_items: [["paperclip", lambda x: root.right_action(x)],["calendar-today", lambda x: root.right_action(x)],["dots-vertical", lambda x: root.right_action(x)]]
    MDBottomNavigation:
        text_color_active: app.theme_cls.primary_color
        transition: RiseInTransition
        MDBottomNavigationItem:
            name: "Screen 1"
            text: "News"
            icon: "newspaper-variant-multiple-outline"
            Screen_1:
        MDBottomNavigationItem:
            name: "Screen 2"
            text: "Global"
            icon: "search-web"
            Screen_2:
        MDBottomNavigationItem:
            name: "Screen 3"
            text: "trending"
            icon: "chart-bar-stacked"
            badge_icon: "numeric-10"
            on_tab_press: self.badge_icon=""
            Screen_3:


<Screen_1>:
    MDBoxLayout:
        size_hint: 0.5,0.5
        pos_hint: {"center_x": 0.5, "center_y":0.5}
        radius: 25
        md_bg_color: app.theme_cls.primary_color
        MDLabel:
            text: "Screen 1 :)"
            theme_text_color: "Custom"
