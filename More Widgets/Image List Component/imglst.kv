Interface:
    MDBottomNavigation:
        MDBottomNavigationItem:
            name: "screen 1"
            icon: "view-gallery-outline"
            text: "Gallery"
            MDScrollView:
                MDStackLayout:
                    id: stacklayout1
                    adaptive_height: True
                    padding: dp(20)
                    spacing: dp(20)
                    Tile:
                        txt: "Nature"
                        img: "img1.jpg"
                    Tile:
                        txt: "Trees"
                        img: "img2.jpg"
                    Tile:
                        txt: "Sky"
                        img: "img3.jpg"
                    Tile:
                        txt: "Water"
                        img: "img4.jpg"
        MDBottomNavigationItem:
            name: "screen 2"
            icon: "heart"
            text: "Favourite"
            on_tab_press: root.check_favourite()
            MDScrollView:
                MDStackLayout:
                    id: stacklayout2
                    adaptive_height: True
                    padding: dp(20)
                    spacing: dp(20)

<Tile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 1, 1, 1, .2
    source: root.img
    size_hint:None,None
    size: dp(200),dp(200)
    MDIconButton:
        id: iconbutton
        icon: "heart-outline"
        theme_icon_color: "Custom"
        icon_color: 1, 0, 0, 1
        pos_hint: {"center_y":0.5}
        on_press: self.icon="heart" if self.icon=="heart-outline" else "heart-outline"
    MDLabel:
        text: root.txt
        bold: True
        theme_text_color: "Custom"
        text_color: 0,0,0, 1